# обязательно заполни реальными значениями
SECRET_KEY=yourkey
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# безопасность и доверенные домены для https
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# локаль
TIME_ZONE=Europe/Paris
LANGUAGE_CODE=ru-ru

# БД (обязательно Postgres/другая prod-БД)
DATABASE_URL=

# почта (реальный SMTP)
EMAIL_HOST=
EMAIL_PORT=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True

# статика/медиа
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media

# кэш/редис (по желанию)
# REDIS_URL=

# мониторинг (если подключишь)
# SENTRY_DSN=
